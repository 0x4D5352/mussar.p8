pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
-- constants
pi = 3.141592653589793238462643
gravity = 1
angle_v = 0
angle_a = 0
radius = 6
friction = 0.9

function _init()
	origin = {x=64, y=0}
	angle = pi / 4
	bob = {x=0,y=0}
	length = 64
end


function _draw()
	cls()
	force = gravity * sin(angle)
	angle_a = (-1 * force) / length
	angle_v += angle_a
	angle += angle_v
	bob['x'] = length * sin(angle) + origin['x']
	bob['y'] = length * -cos(angle) + origin['y']
	line(origin['x'],origin['y'],bob['x'],bob['y'],7)
	circfill(bob['x'],bob['y'],radius,7)
end


