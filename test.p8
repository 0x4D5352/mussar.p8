pico-8 cartridge // http://www.pico-8.com
version 42

__lua__

function _init()
	p1x = 64
	p1y = 64
	radius = 7
end

function _update()
	sint = sin(t()/2) * (p1x - radius - 1)
	cost = ((cos(t()/2) * (p1y - radius - 1)) + 64)
end

function _draw()
	cls()
	circfill(sint+64, cost, radius, 7)
	line(0,127,127,127,8)
	print("cos of t() * y: "..cost)
	print("sine of t() * y: "..sint+64)
end

