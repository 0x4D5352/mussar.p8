pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
	clr = flr(rnd(16))+1
	last = t()
end
function _update()
	now = t()
	deltatime = now - last
	if deltatime >= 0.15 then
		clr = flr(rnd(16))+1
		last = now
	end
end

function _draw()
	cls()
	for y=10,117,4 do
		for x=10,117,4 do
			local y2 = y / 2 
			local x2 = x / 2
			line(x,y,x+y2,y2,clr+y/4)
		end
	end
	--     x1 y1 x2 y2
	--line(20,20,30,10,7)
end
