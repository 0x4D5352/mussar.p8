function dot(v1,v2)
	return v1['x']*v2['x']+v1['y']*v2['y']
end

function round(n)
	if ceil(n) - n >= 0.5 then
		return ceil(n)
	else
		return flr(n)
	end
end

function shuffle(arr)
	for e=#arr,1,-1 do
		local i = round(rnd()*(e-1))
		local temp = arr[e]
		
		arr[e] = arr[i]
		arr[i] = temp	
	end
end

function makepermutations()
	local perm = {}
	for i=0,255, 1 do
		add(perm,i)
	end
	shuffle(perm)
	for i=0,255,1 do
		add(perm,perm[i])
	end
	return perm	
end

