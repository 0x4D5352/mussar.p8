version 42
__lua__
function rndcolor()
	 return flr(rnd(16))
end

current = flr(rnd(16))

bg = 0

r = 50

function _draw()
	cls()
	circfill(64, 64, r, current)

	if rnd(1) > 0.80 then
		current = rndcolor()
	end

	if current == 0 then
		circ(64,64,r,rndcolor())
	end

	xa = 64 + sin(t()/3600) * r
	ya = 64 + cos(t()/3600) * r

	xb = 64 + sin(t()/60) * r/2
	yb = 64 + cos(t()/60) * r/2

	local lcolor = rndcolor()
	line(64, 64, xa, ya, lcolor)

	line(64, 64, xb, yb, lcolor)

	print("hey look a clock", 7)
	
	time = stat(93)..":"..stat(94)..":"..stat(95)
	print(time.." (not accurate)",0,120,7)
end
